<%= form_for @recipe do |recipe| %>
	<%= recipe.label :title %>
	<%= recipe.text_field :title %>

	<%= recipe.fields_for :ingredients do |ingredient| %>
		<%= ingredient.label :name %>
		<%= ingredient.text_field :name %>

		<%= ingredient.label :quantity %>
		<%= ingredient.text_field :quantity %>
	<% end %>

	<%= recipe.submit %>
<% end %>